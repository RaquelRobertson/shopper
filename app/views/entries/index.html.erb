<h1>Master Shopping List</h1>

<table>
  <tr>
    <th>List</th>
    <th>Item</th>
    <th>Quantity</th>
    <th>Bought</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.list_id %></td>
    <td><%= entry.item_id %></td>
    <td><%= entry.quantity %></td>
    <td><%= entry.bought %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

