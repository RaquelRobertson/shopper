<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= list.name %>
</p>

<table>
  <% entries.each do |entry| %>
    <tr>
      <td><%= entry.item ? entry.item.name : 'Unknown' %></td>
      <td><%= entry.quantity %></td>
      <% if entry.bought %>
        <td>true</td>
      <% else %>
        <td>false</td>
      <% end %>
      <td><%= link_to 'Show', list_entry_path(list, entry) %></td>
      <td><%= link_to 'Edit', edit_list_entry_path(list, entry) %></td>
      <td><%= link_to 'Remove from list', list_entry_path(list, entry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add New Entry', new_list_entry_path(list) %>
<%= link_to 'Edit', edit_list_path(list) %> |
<%= link_to 'Back', lists_path %>
