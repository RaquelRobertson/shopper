<% lists.each do |list| %>
  <tr>
    <td><%= link_to list.name, list %></td>
    <td><%= link_to 'Edit', edit_list_path(list), class: "button tiny secondary" %></td>
    <td><%= link_to 'X', list, class: "button tiny secondary" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

